{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "noEmit": false,
    "isolatedModules": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
}