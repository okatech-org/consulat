{
  "recommendations": {
    "general": {
      "typescript": true,
      "nextjs": {
        "version": 15,
        "appRouter": true,
        "serverComponents": true
      }
    },
    "imports": {
      "paths": {
        "@/components": "src/components",
        "@/lib": "src/lib",
        "@/hooks": "src/hooks",
        "@/types": "src/types",
        "@/schemas": "src/schemas",
        "@/actions": "src/actions"
      }
    },
    "components": {
      "defaultExport": false,
      "naming": {
        "pattern": "kebab-case",
        "prefix": ""
      },
      "location": "src/components",
      "structure": {
        "ui": "src/components/ui",
        "layouts": "src/components/layouts",
        "features": "src/components/{feature-name}"
      }
    },
    "styling": {
      "tailwind": true,
      "cssModules": false,
      "conventions": {
        "classNames": "cn utility from @/lib/utils",
        "variants": "cva from class-variance-authority"
      }
    },
    "forms": {
      "validation": "zod",
      "handling": "react-hook-form",
      "schema": "src/schemas/{model}.ts"
    },
    "state": {
      "server": "server actions",
      "client": "zustand",
      "forms": "react-hook-form"
    },
    "patterns": {
      "hooks": {
        "naming": "use{Feature}",
        "location": "src/hooks"
      },
      "actions": {
        "naming": "{model}{Action}",
        "location": "src/actions"
      },
      "types": {
        "naming": "Pascal case",
        "location": "src/types"
      }
    },
    "auth": {
      "provider": "next-auth",
      "version": 5,
      "adapter": "prisma",
      "guards": {
        "server": "auth()",
        "client": "useSession()"
      }
    },
    "data": {
      "orm": "prisma",
      "mutations": "server actions",
      "queries": "@tanstack/react-query",
      "schema": "prisma/schema.prisma"
    },
    "ui": {
      "components": "shadcn-ui",
      "primitives": "radix-ui",
      "icons": "lucide-react",
      "animations": "framer-motion"
    },
    "i18n": {
      "library": "next-intl",
      "location": "src/i18n",
      "conventions": {
        "keys": "nested.dot.notation",
        "files": "messages/{locale}.json"
      }
    },
    "code": {
      "formatting": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
      },
      "conventions": {
        "exports": "named exports preferred",
        "imports": "absolute imports with @/ alias",
        "types": "interfaces preferred over types",
        "async": "prefer async/await over promises"
      }
    }
  }
}
